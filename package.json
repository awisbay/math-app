{
  "name": "math-app",
  "version": "0.0.1",
  "description": "Indonesian math learning app - Kelas 1-12",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test:smoke": "echo \"Smoke tests - to be implemented\"",
    "typecheck:api": "cd services/api && npm run typecheck",
    "flutter:analyze": "cd apps/mobile_flutter && flutter analyze",
    "ci": "npm run lint && npm run typecheck:api && npm run flutter:analyze && npm run test:smoke"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
