# Local API environment example
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Local compose service hostnames when API runs in Docker:
# - postgres:5432
# - redis:6379
# If API runs directly on host, use localhost instead.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/math_app?schema=public
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=replace_with_local_secret_at_least_32_chars
JWT_EXPIRES_IN=7d

# Firebase token verification (optional in local)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Rate limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Optional AI
OPENAI_API_KEY=your-openai-api-key
